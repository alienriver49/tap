{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/tools/gulp",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "target": "es5",    
