{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "types": [
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "jspm_packages",
    "dist",
    "release"
  ]
}